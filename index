<script>

function login() {
    const code = document.getElementById("accessCode").value;
    if(code === "GPO-ENAKI-14") {
        document.getElementById("login").style.display = "none";
        document.getElementById("database").style.display = "block";
    } else {
        document.getElementById("loginError").innerText = "ACCESS DENIED.";
    }
}

function showSection(sectionId) {
    const sections = document.querySelectorAll("section");
    sections.forEach(sec => sec.classList.remove("active"));
    document.getElementById(sectionId).classList.add("active");
}

function unlockElepathy() {
    const pass = prompt("ENTER CLASSIFIED KEY:");
    if(pass === "JUPITER-FALL") {
        document.getElementById("elepathyContent").style.display = "block";
    } else {
        alert("ACCESS RESTRICTED.");
    }
}

</script>

